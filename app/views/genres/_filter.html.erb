<% content_for :filter do %>
    <% columns = 5 %>
    <% per_col = (@genres.size.to_f / columns).ceil %>

    <% for i in 0...columns %>
        <td>
          <% for a in 0...per_col %>
              <% b = i*per_col + a %>
              <%= link_to @genres[b].name, @genres[b] if b < @genres.size %><br/>
          <% end %>
        </td>
    <% end %>
<% end %>